<div class="container">
<h2>新規会員登録</h2>
</div>

<div class="container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

　<form class="row g-3">
  <div class="col-md-6">
    <label for="inputLastName" class="col-sm-2 col-form-label">(姓)</label>
      <div class="col-sm-10">
      <input type="last_name" class="form-control" id="inputLastName">
      </div>
  </div>
  <div class="col-md-6">
    <label for="inputFirstName" class="col-sm-2 col-form-labe">(名)</label>
      <div class="col-sm-10">
      <input type="first_name" class="form-control" id="inputFirstName">
      </div>
  </div>
  <div class="col-md-6">
    <label for="inputLastNameKana" class="col-sm-2 col-form-label">(セイ)</label>
    <div class="col-sm-10">
      <input type="last_name_kana" class="form-control" id="inputLastNameKana">
    </div>
  </div>
  <div class="col-md-6">
    <label for="inputFirstNameKana" class="col-sm-2 col-form-label">(メイ)</label>
    <div class="col-sm-10">
      <input type="first_name_kana" class="form-control" id="inputFirstNameKana">
    </div>
  </div>
  <div class="col-12">
    <label for="inputEmail" class="col-sm-2 col-form-label">メールアドレス</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="inputEmail">
    </div>
  </div>
  <div class="col-12">
    <label for="inputPostalCode" class="col-sm-2 col-form-label">郵便番号(ハイフンなし)</label>
    <div class="col-sm-10">
      <input type="postal_code" class="form-control" id="inputPostalCode">
    </div>
  </div>
  <div class="col-12">
    <label for="inputAdress" class="col-sm-2 col-form-label">住所</label>
    <div class="col-sm-10">
      <input type="address" class="form-control" id="inputAddress">
    </div>
  </div>
  <div class="col-12">
    <label for="inputTelephoneNumber" class="col-sm-2 col-form-label">電話番号(ハイフンなし)</label>
    <div class="col-sm-10">
      <input type="telephone_number" class="form-control" id="inputTelephoneNumber">
    </div>
  </div>
  <div class="col-12">
    <label for="inputPassWord" class="col-sm-2 col-form-label">パスワード(６文字以上)</label>
    <div class="col-sm-10">
      <input type="last_name_kana" class="form-control" id="inputLastNameKana">
    </div>
  </div>
  <div class="col-12">
    <label for="inputPassWord" class="col-sm-2 col-form-label">パスワード</label>
    <div class="col-sm-10">
      <input type="last_name_kana" class="form-control" id="inputLastNameKana">
    </div>
  </div>
</form>
　
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>

</div>
