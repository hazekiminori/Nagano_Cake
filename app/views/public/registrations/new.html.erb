<div class="container mt-3">
<h2>新規会員登録</h2>
</div>

<div class="container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  
  <div class="row mt-3">
    <div class="col-2">名前</div>
        <%= f.label :last_name, "（姓）" , class:"col-1" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"col-3" %>

        <%= f.label :first_name, "（名）", class:"col-1" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"col-3" %>
  </div>
  
  <div class="row mt-3">
    <div class="col-2">フリガナ</div>
        <%= f.label :last_name_kana, "（セイ）", class:"col-1" %>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class:"col-3" %>

        <%= f.label :first_name_kana, "（メイ）", class:"col-1" %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class:"col-3" %>
  </div>
  
  <div class="row mt-3">
    <%= f.label :email, "メールアドレス", class:"col-3" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"col-4"%>
  </div>

  <div class="row mt-3">
    <%= f.label :postal_code, "郵便番号（ハイフンなし）", class:"col-3" %>
    <%= f.number_field :postal_code, autofocus: true, autocomplete: "postal_code", class:"col-3" %>
  </div>

  <div class="row mt-3">
    <%= f.label :address, "住所", class:"col-3" %>
    <%= f.text_area :address, autofocus: true, autocomplete: "address", class:"col-3" %>
  </div>

  <div class="row mt-3">
    <%= f.label :telephone_number, "電話番号（ハイフンなし）", class:"col-3" %>
    <%= f.number_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class:"col-4" %>
  </div>

  <div class="row mt-3">
    <%= f.label :password, "パスワード（６文字以上）", class:"col-3"%>
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:"col-3" %>
  </div>

  <div class="row mt-3">
    <%= f.label :password_confirmation, "パスワード（確認用）", class:"col-3"%>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-3" %>
  </div>

  <div class="row mt-3">
    <%= f.submit "新規登録",class:"btn btn-primary col-1" %>
  </div>
  
  </div>
<% end %>

  <div class="container mt-3">
  <h4>既に登録済みの方</h4>
  <p>
    <%= link_to "こちら", new_customer_session_path %>からログインしてください
  </p>

</div>



