<div class="container">
<h2>新規会員登録</h2>
</div>

<div class="container overflow-hidden text-center">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <div class="row gy-5">
    <div>名前</div>
        <%= f.label :last_name, "（姓）", class:"col" %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"col-md-4" %>

        <%= f.label :first_name, "（名）", class:"col" %><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"col-md-4" %>
  </div>
  
  <div class="row gy-5">
　  <div>フリガナ</div>
        <%= f.label :last_name_kana, "（セイ）", class:"col" %><br />
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class:"col-4" %>

        <%= f.label :first_name_kana, "（メイ）", class:"col" %><br />
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class:"col-4" %>
  </div>
  
  <div class="row gy-5">
    <%= f.label :email, "メールアドレス", class:"col-4" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-4" %>
  </div>

  <div class="row gy-5">
    <%= f.label :postal_code, "郵便番号（ハイフンなし）", class:"col-4" %><br />
    <%= f.number_field :postal_code, autofocus: true, autocomplete: "postal_code", class:"col-4" %>
  </div>

  <div class="row gy-5">
    <%= f.label :address, "住所", class:"col-4" %><br />
    <%= f.text_area :address, autofocus: true, autocomplete: "address", class:"col-4" %>
  </div>

  <div class="row gy-5">
    <%= f.label :telephone_number, "電話番号（ハイフンなし）", class:"col-4" %><br />
    <%= f.number_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class:"col-4" %>
  </div>

  <div class="row gy-5">
    <%= f.label :password, "パスワード（６文字以上）", class:"col-4" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"col-4" %>
  </div>

  <div class="row gy-5">
    <%= f.label :password_confirmation, "パスワード（確認用）", class:"col-4" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-4" %>
  </div>

  <div class="row gy-5">
    <%= f.submit "新規登録",class:"btn btn-primary" %>
  </div>
  
  </div>
<% end %>

  <div class="container">
  <h4>既に登録済みの方</h4>
  <p>
    <%= link_to "こちら", new_customer_session_path %>からログインしてください
  </p>

</div>



