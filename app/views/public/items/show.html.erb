<div class="container">
  <%= image_tag @item.get_image %>
</div>

<div class="container">
  <h3><%= @item.name %></h3>
  <h5><%= @item.introduction %></h5>
  <h4><%= @item.price %></h4>
  <%= form_with model:@cart_item do |f| %>
    <%= f.hidden_field :item_id, :value => @item.id %>
    <%= f.select :amount, *[1..10] %>
  <%= f.submit "カートに入れる", class="btn btn-success" %>
</div>