<div class="container">
<h1>マイページ</h1>
</div>

<div class="container">
<h3>登録情報</h3>
<button>
  <%= link_to "編集する", infomation_path %>
</button>

<table>
  <tbody>
    <tr>
      <td>氏名</td>
      <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>

<h3>配送先</h3>
<button>
  <%= link_to "一覧を見る", '/addresses' %>
</button>

<h3>注文履歴</h3>
<button>
  <%= link_to "一覧を見る", '/orders' %>
</button>
</div>