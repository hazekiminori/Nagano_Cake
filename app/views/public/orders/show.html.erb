<div class ="container">
<h1>注文履歴詳細</h1>
<h4>注文情報</h4>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td class="table-secondary">注文日</td>
          <td><%= current_customer.order.created_at %></td>
        </tr>
        <tr>
          <td class="table-secondary">配送先</td>
          <td><%= @order.address %></td>
        </tr>
        <tr>
          <td class="table-secondary">支払方法</td>
          <td><%= @order.payment_method %></td>
        </tr>
      </tbody>
    </table>

<h4>請求情報</h4>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td class="table-secondary">合計金額</td>
          <td><%= @total %></td>
        </tr>
        <tr>
          <td class="table-secondary">配送料</td>
          <td>800</td>
        </tr>
        <tr>
          <td class="table-secondary">ご請求額</td>
          <td><%= @order_details.price*@order_details.amount %></td>
        </tr>
      </tbody>
    </table>

<h4>注文内容</h4>
    <table class="table table-bordered">
      <thead>
        <tr class="table-secondary">
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.name %></td>
          <td><%= order_detail.price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.subtotal %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>