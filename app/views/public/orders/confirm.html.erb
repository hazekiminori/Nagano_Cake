<div class="container">
  <h1>注文情報確認</h1>

<table class = "table">
  <thead class="thead-secondary">
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>

<tbody>
    <% @cart_items.each do |cart_item| %>
  <tr>
    <td><%= cart_item.item.name %></td>
    <td><%= cart_item.item.with_tax_price %></td>
    <td><%= cart_item.amount %></td>
    <td><%= cart_item.subtotal %></td>
  </tr>
    <% end %>
</tbody>
</table>

<table class="table">
  <tbody>
    <tr>
      <td>送料</td>
      <td>800</td>
    </tr>
    <tr>
      <td>商品合計</td>
       <td></td>
    </tr>
    <tr>
      <td>請求金額</td>
      <td></td>
    </tr>
  </tbody>
</table>

<h3>支払い方法</h3>
<%= @order.payment_method_i18n %>

<h3>お届け先</h3>
<%= @order.postal_code %>
<%= @order.address %>
<%= @order.name %>

<%= link_to "注文を確定する", thanks_path, class:"btn btn-success" %>

</div>