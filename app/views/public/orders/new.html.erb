<div class="container mt-3">
  <h3>注文情報入力</h3>
</div>

<div class="container mt-3">
  <%= form_with model: @order, local: true, url: confirm_path, method: :post do |f| %>
    <div class="row ,mt-3">
      <h5>支払い方法</h5>
    </div>
    <div class="row">
        <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
    </div>
    <div class="row">
        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
    </div>
    
  <div class="row mt-3">
    　<h5>お届け先</h5>
  </div>
  <div class="row">
    <div class="col">
        <%= f.radio_button :address_id, 0 %>
        <%= f.label :address_id, "ご自身の住所" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col">
    　   <%= f.radio_button :address_id, 1 %>
        <%= f.label :address_id, "登録済み住所から選択" %>
        <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col">
        <%= f.radio_button :address_id, 2 %>
        <%= f.label :address_id, "新しいお届け先" %>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
          <p>郵便番号</p>
          <div><%= f.number_field :postal_code %></div>
          <p>住所</p>
          <div><%= f.text_area :address %></div>
          <p>宛名</p>
          <div><%= f.text_field :name %></div>
    </div>
  </div>
    <%= f.submit "確認画面へ進む", class:"btn btn-primary mt-3" %>
  <% end %>
</div>