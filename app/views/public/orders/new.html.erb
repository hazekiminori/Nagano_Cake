<div class="container">
  <h1>注文情報入力</h1>
</div>

<div class="container">
  <%= form_with model: @order do |f| %>
  <div class="row">

    <h3>支払い方法</h3>
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>


      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
  
  </div>
  <div class="row">
    <h3>お届け先</h3>
      <%= f.radio_button :address_id, "current_customer.address" %>
      <%= f.label :address_id, "ご自身の住所" %>
  </div>

  <div class="row">
      <%= f.radio_button :address_id, Address.all %>
      <%= f.label :address_id, "登録済み住所から選択" %>
      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
  </div>
  
  <div class="row">
      <%= f.radio_button :address_id, Address.new %>
      <%= f.label :address_id, "新しいお届け先" %>
    
      <%= f.number_field :postal_code %>
      <%= f.text_area :address %>
      <%= f.text_field :name %>
  </div>
  <% end %>
</div>

<div class="container">
  <%= link_to "確認画面へ進む", confirm_path, method: :post, class:"btn btn-primary" %>
</div>