<div class="container">
  <h1>注文履歴一覧</h1>
</div>
<% @orders.each do |order| %>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.address %></td>
      <td><%= order.total_payment %></td>
      <td><%= order.order_status %></td>
      <td><%= link_to "表示する", orders_path, class:"btn btn-primary" %></td>
    </tr>
  </tbody>
</table>
<% end %>