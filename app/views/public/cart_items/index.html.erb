<div class="container">
  <h1>ショッピングカート</h1>
</div>

<div class="container">
<%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class:"btn btn-danger" %>
</div>

<div class ="container-md">
<% if @cart_items.present? %>
        <table class="table table-bordered">
          <thead class="table-secondary">
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= cart_item.item.name %></td>
              <td><%= cart_item.item.with_tax_price %></td>
              <td>
              <%= form_with model:@cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
              <%= f.hidden_field :amount, value: cart_item.amount %>
              <%= f.select :amount, *[1..10], value: cart_item.amount %>
              <%= f.submit "変更", class:"btn btn-success" %>
              <% end %>
              </td>
              <td><%= cart_item.subtotal %></td>
              <% @total +=  (cart_item.item.price * 1.1).floor * cart_item.amount %>
              <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class:"btn btn-danger" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>


<%= link_to "買い物を続ける", items_path, class:"btn btn-primary" %>

<table class="table table-bordered">
  <tbody>
    <tr>
      <td class="table-secondary">合計金額</td>
      <td><%= @total %></td>
    </tr>
  </tbody>
</table>

<%= link_to "情報入力に進む", new_orders_path, class:"btn btn-success" %>


<% else %>
<h1>カート内は空です</h1>
<% end %>

 </div>