  <div class="container mt-3">
    <h3>商品編集</h3>
    <%= form_with model: @item, url: admin_item_path do |f| %>
      <div class="row mb-3">
          <div class="col-1">
              <label for="inputImage">商品画像</label>
          </div>
          <div class="col-7">
              <%= f.file_field :image, placeholder: "商品画像", accept:"image/*" %>
          </div>
      </div>
      <div class="row mb-3">
          <div class="col-1">
            <label for="inputName">商品名</label>
          </div>
          <div class="col-7">
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"商品名" %>
          </div>
      </div>
      <div class="row mb-3">
          <div class="col-1">
            <label for="inputIntroduction">商品説明</label>
          </div>
          <div class="col-7">
            <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"商品説明" %>
          </div>
      </div>
      <div class="row mb-3">
          <div class="col-1">
            <label for="inputPrice">税抜価格</label>
          </div>
          <div class="col-7">
            <%= f.number_field :price, autofocus: true, id:"inputPrice", placeholder:"税抜価格" %>
          </div>
      </div>
      <div class="row mb-3">
          <div class="col-4">
            <%= f.radio_button :is_active, "true" %>
            <%= f.label :is_active, "販売中", value: true %>
            <%= f.radio_button :is_active, "false" %>
            <%= f.label :is_active, "販売停止中", value: false %>
          </div>
          <div class="col-7">
          </div>
      </div>
　　<%= f.submit "変更を保存", class:"btn btn-success" %>

<% end %>

</div>