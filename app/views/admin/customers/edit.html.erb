
  <div class="container">
  <h1><%= @customer.full_name %>さんの会員情報編集</h1>
    <%= form_with model: @customer, url: admin_customer_path do |f| %>

    <table>
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>

      <tr>
        <th>
          <label for="inputLastName">氏名</label>
        </th>
        <form>
          <div class ="form-group">
        <td><%= f.text_field :last_name, autofocus: true, id:"inputLastName",placeholder: @customer.last_name %></td>
        <td><%= f.text_field :first_name, autofocus: true, id:"inputFirstName", placeholder: @customer.first_name %></td>
          </div>
        </form>
      </tr>

      <tr>
        <th>フリガナ</th>
        <td><%= f.text_field :last_name_kana, autofocus: true, id:"inputLastNameKana", placeholder: @customer.last_name_kana %></td>
        <td><%= f.text_field :first_name_kana, autofocus: true, id:"inputFirstNameKana", placeholder: @customer.first_name_kana %></td>
      </tr>

      <tr>
        <th>
          <label for="inputPostalCode">郵便番号</label>
        </th>
        <td><%= f.number_field :postal_code, autofocus: true, id:"inputPostalCode", placeholder: @customer.postal_code %></td>
      </tr>

      <tr>
        <th>
          <label for="inputAddress">住所</label>
        </th>
        <td><%= f.text_area :address, autofocus: true, id:"inputAddress", placeholder: @customer.address %></td>
      </tr>

      <tr>
        <th>
          <label for="inputTelephoneNumber">電話番号</label>
        </th>
        <td><%= f.number_field :telephone_number, autofocus: true, id:"inputTelephoneNumber", placeholder: @customer.telephone_number %></td>
      </tr>

      <tr>
        <th>
          <label for="inputEmail">メールアドレス</label>
        </th>
        <td><%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder: @customer.email %></td>
      </tr>

      <tr>
        <th>会員ステータス</th>
        <td>
          <%= f.radio_button :is_deleted, "false" %>
          <%= f.label :is_deleted, "有効", value: false %>
          <%= f.radio_button :is_deleted, "true" %>
          <%= f.label :is_deleted, "退会", value: true %>
        </td>
      </tr>
    </table>
    <%= f.submit "変更を保存", class:"btn btn-success" %>
    <% end %>
    </div>
