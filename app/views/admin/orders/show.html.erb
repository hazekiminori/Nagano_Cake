<div class="container">
<h1>注文履歴詳細</h1>
    <table class="table">
      <thead>
        <tr>
          <th>購入者</th>
          <th>注文日</th>
          <th>配送先</th>
          <th>支払方法</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @customer.full_name %></td>
          <td><%= @order.created_at %></td>
          <td><%= @order.address %></td>
          <td><%= @order.payment_method_i18n %></td>
          <td><%#= @order.states %></td>
        </tr>
      </tbody>
    </table>

    <table class="table">
      <thead class="thead-secondary">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= (order_detail.price*1.1).floor %></td>
          <td><%= order_detail.amount %></td>
          <td><%= (order_detail.price*1.1).floor*order_detail.amount %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <p><strong>商品合計</strong></p>
    <p><%= @total %>円</p>
    <p><strong>送料</strong></p>
    <p>800円</p>
    <p><strong>請求金額合計</strong></p>
    <p><%= @total+800 %>円</p>
  </div>

</div>