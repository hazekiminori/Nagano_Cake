<div class="container">
  <h4>注文履歴一覧</h4>
  <table class= "table">
      <thead class= "thead-light">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
        </tr>
      </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.name %></td>
        <td><%= order.amount %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

