<div class="container">
  <h4>注文履歴一覧</h4>
  <table class= "table">
      <thead class= "thead-light">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
        </tr>
      </thead>
    <tbody>
      <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.created_at %></td>
        <td><%= order_detail.order.full_name %></td>
        <td><%= order_detail.amount %></td>
      </tr>
    </tbody>
      <% end %>
  </table>
</div>

